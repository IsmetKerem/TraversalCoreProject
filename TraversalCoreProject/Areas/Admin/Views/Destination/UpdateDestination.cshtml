@model EntityLayer.Concrete.Destination
@{
    Layout="_AdminLayout";
}

<h1>Rota Güncelleme Sayfası</h1>
<form method="post">
    @Html.HiddenFor(x=>x.DestinationID)
    <div class="form-group">
        @Html.Label("Şehir")
        <input type="text" asp-for="City" class="form-control"></input>
    </div>
    <br/>
    <div class="form-group">
        @Html.Label("Gün Gece")
        <input type="text" asp-for="DayNight" class="form-control"></input>
    </div>
    <br/>

    <div class="form-group">
        @Html.Label("Fiyat")
        <input type="text" asp-for="Price" class="form-control"></input>
    </div>
    <br/>

    <div class="form-group">
        @Html.Label("Ana Görsel")
        <input type="text" asp-for="Image" class="form-control"></input>
    </div>
    <br/>

    <div class="form-group">
        @Html.Label("Kapasite")
        <input type="text" asp-for="Capacity" class="form-control"></input>
    </div>
    <br/>

    <div class="form-group">
        @Html.Label("Kapak Görseli")
        <input type="text" asp-for="CoverImage" class="form-control"></input>
    </div>
    <br/>

    <div class="form-group">
        @Html.Label("Görsel 2")
        <input type="text" asp-for="Image2" class="form-control"></input>
    </div>
    <br/>
    <div class="form-group">
        @Html.Label("Eklemek İstedikleriniz")
        <textarea cols="30" rows="5"class="form-control" asp-for="Description"></textarea>
    </div>
    <br/>

    <div class="form-group">
        @Html.Label("Detay1")
        <textarea cols="30" rows="5"class="form-control" asp-for="Details1"></textarea>
    </div>
    <br/>

    <div class="form-group">
        @Html.Label("Detay2")
        <textarea cols="30" rows="5"class="form-control" asp-for="Details2"></textarea>
    </div>
    <br/>
    <button class="btn btn-outline-primary">Güncelle</button>
</form>