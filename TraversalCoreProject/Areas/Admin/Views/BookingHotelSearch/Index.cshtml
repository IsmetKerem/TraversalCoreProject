@model IEnumerable<TraversalCoreProject.Areas.Admin.Models.BookingHotelSearchViewModel.Results>
@{
    Layout="_AdminLayout";
    int count = 0;
    
}

<h1>Booking Otel Rezervasyon Sayfası</h1>
<h3>Arama Yapılan şehir: Paris/Feansa</h3>
<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Otel Adı</th>
        <th>Otel Puanı</th>
        <th>Otel Değerlendirmesi</th>
        <th>Detaylar</th>
        
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.name</td>
            <td>@item.reviewScore</td>
            @{
                if (item.reviewScoreWord == "Very good")
                {
                    <td>Çok İyi</td>
                }
                if (item.reviewScoreWord == "Good")
                {
                    <td>İyi</td>
                }
                if (item.reviewScoreWord == "Fabulous")
                {
                    <td>Harika</td>
                }
                if (item.reviewScoreWord == "Superb")
                {
                    <td>Süper</td>
                } 
                if (item.reviewScoreWord == "Pleasant")
                {
                    <td>İdare Eder</td>
                }
            }
            
            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
        </tr>
    }
</table>