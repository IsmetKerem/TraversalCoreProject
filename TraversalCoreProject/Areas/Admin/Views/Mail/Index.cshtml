@model TraversalCoreProject.Models.MailRequest
@{
    ViewBag.Title = "Mail Gönderme Sistemi";
    Layout = "_AdminLayout";
}

<h2>Mail Gönderme Sayfası</h2>

<form method="post">
    <div class="form-group">
        @Html.Label("Alıcı Mail Adresi")
        <input type="text" name="ReceiverMail" class="form-control" />
    </div>
    <br/>
    <div class="form-group">
        @Html.Label("Konu")
        <input type="text" name="Subject" class="form-control" />
    </div>
<br/>
    <div class="form-group">
        @Html.Label("Mesaj İçeriği")
        <textarea name="Body" class="form-control" rows="5"></textarea>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>