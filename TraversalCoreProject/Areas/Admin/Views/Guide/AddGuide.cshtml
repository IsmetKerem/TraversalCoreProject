@model EntityLayer.Concrete.Guide
@{
    Layout="_AdminLayout";
}
<h1>Yeni Rehber Ekleme Sayfası</h1>


<form method="post">
    <div class="form-group">
        @Html.Label("Ad Sayad")
        <input type="text" asp-for="Name" class="form-control"></input>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br/>
    <div class="form-group">
        @Html.Label("Fotoğraf")
        <input type="text" asp-for="Image" class="form-control"></input>
        <span asp-validation-for="Image" class="text-danger"></span>

    </div>
    <br/>
    <div class="form-group">
        @Html.Label("Instagram URL")
        <input type="text" asp-for="InstagramUrl" class="form-control"></input>
    </div>  
    <br/>
    <div class="form-group">
        @Html.Label("Twitter URL")
        <input type="text" asp-for="TwitterUrl" class="form-control"></input>
    </div>
    <br/>
    <div class="form-group">
        @Html.Label("Açıklama")
        <textarea cols="30" rows="5"class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <br/>

    <button class="btn btn-outline-primary">Ekle</button>
</form>