@using EntityLayer.Concrete
@model List<Guide>
@{
    Layout = "_AdminLayout";
    int count = 0;
}
<style>
    img{
        border-radius: 50%;
        
    }
</style>
<h1>Rehber Listesi</h1>
<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Görsel</td>
        <td>Ad-Soyad</td>
        <td>Açıklama</td>
        <td>Durum</td>
        <td>Düzenle</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @{ count += 1;}
            <td>@count</td>
            <td><img src="@item.Image" height="50" width="50"></img></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            
                @{
                    if (item.Status == true)
                    {
                        <td><a href="#" class="btn btn-outline-warning">Pasif Yap</a> </td>
                    }
                    else
                    {
                        <td><a href="#" class="btn btn-outline-info">Aktif Et</a> </td>
                    }
                }
            
            <td><a href="#" class="btn btn-outline-success">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Ekle</a>