@model TraversalCoreProject.Areas.Member.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h1>@SharedLocalizer["ProfileEdit"]</h1>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">@SharedLocalizer["ProfileEdit"]</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>

            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">@SharedLocalizer["ProfileInfo"]</p>
                
                    <form method="post" enctype="multipart/form-data">
                        <label>@SharedLocalizer["YourName"]</label>
                        <input type="text" asp-for="name" class="form-control" />
                        <br />
                        <label>@SharedLocalizer["YourSurname"]</label>
                        <input type="text" asp-for="surname" class="form-control" />
                        <br />
                        <label>@SharedLocalizer["YourEmail"]</label>
                        <input type="text" asp-for="mail" class="form-control" />
                        <br />
                        <label>@SharedLocalizer["Password"]</label>
                        <input type="text" asp-for="password" class="form-control" />
                        <br />
                        <label>@SharedLocalizer["ConfirmPassword"]</label>
                        <input type="text" asp-for="confirmpassword" class="form-control" />
                        <br />
                        <label>@SharedLocalizer["PhoneNumber"]</label>
                        <input type="text" asp-for="phonenumber" class="form-control" />
                        <br />
                        <div class="form-group">
                            <label>@SharedLocalizer["SelectPhoto"]</label>
                            <br />
                            <input type="file" asp-for="Image" />
                        </div>
                        <br />
                        <button class="btn btn-primary">@SharedLocalizer["Update"]</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>